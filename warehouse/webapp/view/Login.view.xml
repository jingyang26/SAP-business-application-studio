<mvc:View controllerName="warehouse.controller.Login" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Page showHeader="false" class="login-page">
        <content>
            <HBox class="login-container" justifyContent="Center" alignItems="Stretch" width="100%" height="100%">
                <!-- Left Section -->
                <VBox class="login-left" width="50%" alignItems="Center" justifyContent="Center">
                    <Text text="AKMAJU" class="brand-text" />
                </VBox>

                <!-- Right Section (Login Form) -->
                <VBox class="login-right" width="50%" alignItems="Center" justifyContent="Center">
                    <VBox width="70%" class="login-form">
                        <Title text="Welcome Back!" level="H2" class="welcome-title" />
                        <Text text="Sign in to access your account" class="sub-title" />
                        
                        <!-- Username Input -->
                        <Input id="username" placeholder="Enter your username" 
                               icon="sap-icon://person-placeholder" 
                               class="input-field" />
                        
                        <!-- Password Input -->
                        <Input id="password" placeholder="Enter your password" 
                               type="Password" 
                               icon="sap-icon://locked" 
                               class="input-field" />
                        
                        <!-- Login Button -->
                        <Button text="Login" press=".onLogin" type="Emphasized" class="login-button" />

                        
                        <!-- Remember Me Text -->
                        <Text text="Remember me for next time" class="remember-text" />
                    </VBox>
                </VBox>
            </HBox>
        </content>
    </Page>
</mvc:View>
